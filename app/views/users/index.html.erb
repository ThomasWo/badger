<h2>Users</h2>

<%= link_to "Add User", new_user_path %>

<table>
  <tr>
    <th>Last</th>
    <th>First</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.last_name %></td>
      <td><%= user.first_name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <% if current_user.super_admin %>
        <td>
          <%= link_to "Edit", edit_user_path(user) %>
          <%= link_to "Remove", user_path(user), method: :delete %>
        </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
</table>
